<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.cmtech.android.bledeviceapp">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-feature android:name="android.hardware.location.network" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_kang"
        android:label="@string/app_name"
        android:persistent="true"
        android:roundIcon="@mipmap/ic_kang"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:replace="android:name">

        <activity android:name=".activity.SplashActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.LoginActivity" />

        <activity android:name=".activity.MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.ScanActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <activity android:name=".activity.RecordExplorerActivity"
            android:launchMode="singleTask"/>

        <activity android:name=".activity.AboutUsActivity"
            android:launchMode="singleTask"/>

        <activity android:name=".activity.AccountActivity"
            android:launchMode="singleTask"/>

        <activity android:name=".activity.DeviceInfoActivity"
            android:label= "@string/cfg_device_basic_info"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />


        <activity android:name="com.cmtech.android.bledevice.hrm.view.HrmCfgActivity"
            android:label="@string/title_activity_hrmcfg"
            android:launchMode="singleTask"/>

        <activity android:name="com.cmtech.android.bledevice.thm.view.ThmCfgActivity"
            android:launchMode="singleTask"/>

        <activity android:name="com.cmtech.android.bledevice.thermo.view.ThermoCfgActivity"
            android:launchMode="singleTask"/>

        <activity android:name="com.cmtech.android.bledevice.hrm.view.HrRecordActivity"
            android:launchMode="singleTask"/>
        <activity android:name="com.cmtech.android.bledevice.hrm.view.EcgRecordActivity"
            android:launchMode="singleTask"/>
        <activity android:name="com.cmtech.android.bledevice.thermo.view.ThermoRecordActivity"
            android:launchMode="singleTask"/>
        <activity android:name="com.cmtech.android.bledevice.eeg.view.EegRecordActivity"
            android:launchMode="singleTask"/>

        <service
            android:name=".model.NotificationService"
            android:enabled="true"
            android:exported="false"
            android:priority="1000">
        </service>

        <activity android:name="com.cmtech.android.bledevice.ecg.activity.EcgRecordActivity" />
        <activity android:name="com.cmtech.android.bledevice.ecg.activity.EcgRecordExplorerActivity" />
        <activity
            android:name="com.cmtech.android.bledevice.ecg.activity.EcgMonitorConfigureActivity"
            android:label="配置心电带设备"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />

    </application>

</manifest>