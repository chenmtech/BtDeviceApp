<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toolbar="http://schemas.android.com/apk/res-auto"
    xmlns:cmtech="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tb_ecgexplorer"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            toolbar:title="心电记录"
            toolbar:navigationIcon="@mipmap/ic_left_arrow_32px"
            android:theme="@style/ThemeOverlay.AppCompat.Light"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/primary_dark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="记录列表"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <android.support.v7.widget.RecyclerView
            android:id = "@+id/rv_ecgfile_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6sp"
            android:minHeight="50dp"/>

        <!--心电信号部分-->
        <LinearLayout
            android:id="@+id/ecgfile_ecgsignal_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/primary_dark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="心电信号"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp">

                <com.cmtech.android.bledevice.ecgmonitor.view.EcgFileRollWaveView
                    android:id="@+id/rwv_ecgview"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    cmtech:background_color="#666"
                    cmtech:grid_color="#f00"
                    cmtech:wave_color="#ff0"
                    cmtech:show_gridline="true"/>

                <TextView
                    android:id="@+id/tv_current_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:text="00:00:00"
                    android:textColor="#fff"
                    android:textSize="16sp"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp">

                <ImageButton
                    android:id="@+id/ib_ecgreplay_startandstop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/primary_dark"
                    android:layout_marginStart="5dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@mipmap/ic_ecg_play_32px"
                    android:minHeight="0dp"
                    android:visibility="gone"
                    android:contentDescription="@null"/>

                <SeekBar
                    android:id="@+id/sb_ecgfile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tv_total_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="6dp"
                    android:text="00:00:00"
                    android:textColor="@color/primary_text"
                    android:textSize="12sp"/>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id = "@+id/rv_ecgcomment_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:layout_margin="8sp"/>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/primary_dark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="心率分析"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <include layout="@layout/layout_hr_commoninfo"/>

        <include layout="@layout/layout_hr_linechart"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="6dp"
            android:background="@color/primary_dark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="6dp"
            android:text="统计分布"
            android:textSize="12sp"
            android:textColor="@color/primary_text"/>

        <include layout="@layout/layout_hr_histchart"/>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>