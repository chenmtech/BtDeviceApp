<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toolbar="http://schemas.android.com/apk/res-auto"
    xmlns:cmtech="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tb_ecgexplorer"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            toolbar:title="心电记录"
            toolbar:navigationIcon="@mipmap/ic_ecgexplorer"
            android:theme="@style/ThemeOverlay.AppCompat.Light"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/primary_dark"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="记录列表"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primary_dark"/>

        <android.support.v7.widget.RecyclerView
            android:id = "@+id/rv_ecgfile_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_dark">

            <com.cmtech.android.bledevice.ecgmonitor.view.EcgFileRollWaveView
                android:id="@+id/rwv_ecgview"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="6sp"
                cmtech:background_color="#666"
                cmtech:grid_color="#f00"
                cmtech:wave_color="#ff0"
                cmtech:show_gridline="true"/>

            <TextView
                android:id="@+id/tv_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_margin="6sp"
                android:text="00:00:00"
                android:textColor="#fff"
                android:textSize="16sp"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_dark">

            <ImageButton
                android:id="@+id/ib_ecgreplay_startandstop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/primary_dark"
                android:layout_marginStart="5dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@mipmap/ic_ecg_play_32px"
                android:minHeight="0dp"
                android:visibility="gone"
                android:contentDescription="@null"/>

            <SeekBar
                android:id="@+id/sb_ecgfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_margin="4sp"/>

            <TextView
                android:id="@+id/tv_total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="6dp"
                android:text="00:00:00"
                android:textColor="@color/primary_text"
                android:textSize="12sp"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id = "@+id/rv_ecgappendix_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="平均心率："
                android:textColor="@color/primary_text"/>

            <TextView
                android:id="@+id/tv_average_hr_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/primary_text"
                android:layout_marginEnd="10sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最高心率："
                android:textColor="@color/primary_text"/>

            <TextView
                android:id="@+id/tv_max_hr_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/primary_text"/>

        </LinearLayout>

        <com.cmtech.android.bledevice.ecgmonitor.model.EcgHrHistogramChart
            android:id="@+id/ecgfile_hr_histogram"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>