<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@color/secondary"
    android:orientation="vertical">

    <com.cmtech.android.bledeviceapp.view.CircleImageView
        android:id="@+id/iv_account_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_user"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/tv_account_nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_account_image"
        android:layout_centerHorizontal="true"
        android:text=" "
        android:textColor="@color/primary_text"
        android:textSize="@dimen/normal_font"
        android:maxLength="12"/>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_account_nick_name"
        android:layout_centerHorizontal="true"
        android:text=" "
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/normal_font"
        android:maxLength="12"/>
</RelativeLayout>