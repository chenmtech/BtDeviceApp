<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/secondary"
    android:orientation="vertical">

    <com.cmtech.android.bledevice.view.RoundImageView
        android:id="@+id/iv_account_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_unknown_user"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/tv_account_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_account_image"
        android:layout_centerHorizontal="true"
        android:text="匿名"
        android:textColor="@color/secondary_text"
        android:textSize="20sp"
        android:maxLength="12"/>

    <ImageButton
        android:id="@+id/ib_change_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:background="@android:color/transparent"
        android:src="@mipmap/ic_change_user" />
</RelativeLayout>