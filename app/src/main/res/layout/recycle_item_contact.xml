<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:visibility="visible">
        <com.cmtech.android.bledeviceapp.view.CircleImageView
            android:id="@+id/iv_contact_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_user_32px"/>

        <TextView
            android:id="@+id/tv_contact_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/anonymous"
            android:textSize="@dimen/smallest_font"
            android:textColor="@color/secondary_text"
            android:maxLength="12"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID:"
                android:textSize="@dimen/smallest_font"
                android:textColor="@color/secondary_text"/>

            <TextView
                android:id="@+id/tv_contact_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/smallest_font"
                android:textColor="@color/secondary_text"
                android:maxLength="12"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_contact_note"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:layout_margin="10dp"
        android:maxLength="100"/>

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="状态"
        android:textSize="@dimen/normal_font"
        android:textColor="@color/blue"/>

</LinearLayout>