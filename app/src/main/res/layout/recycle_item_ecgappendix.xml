<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ecgappendix_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_comment_24px"/>
        <TextView
            android:id="@+id/ecgappendix_creator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ecgappendix_image"
            android:layout_centerVertical="true"
            android:text="匿名"
            android:textAppearance="@style/PersonTextAppearance"
            android:textSize="16sp"
            android:layout_margin="2dp"
            android:maxLength="10"/>

        <LinearLayout
            android:id="@+id/ecgappendix_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <ImageButton
                android:id="@+id/ib_ecgappendix_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_save_32px"
                android:contentDescription="save appendix"
                android:background="@color/primary"
                android:visibility="visible"/>

        </LinearLayout>

        <TextView
            android:id="@+id/ecgappendix_modifytime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/ecgappendix_button"
            android:layout_centerVertical="true"
            android:textAppearance="@style/EcgCommentTextAppearance"
            android:text="未知"
            android:textSize="14sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/ecgappendix_reviseat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/ecgappendix_modifytime"
            android:layout_centerVertical="true"
            android:text="修改于："
            android:textColor="@color/secondary_text"
            android:textSize="14sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="100dp">
        <EditText
            android:id="@+id/ecgappendix_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:textAppearance="@style/EcgCommentTextAppearance"
            android:textSize="14sp"
            android:background="@color/primary_dark"
            android:enabled="true"/>

    </LinearLayout>

</LinearLayout>