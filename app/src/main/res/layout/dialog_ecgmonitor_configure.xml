<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp">
    <CheckBox
        android:id="@+id/cb_hr_warn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="心率值异常是否报警" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="心率值异常下限："/>
        <EditText
            android:id="@+id/et_hr_low_limit"
            style="@style/edittext_circle_gray_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:hint="请输入数字"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="心率值异常上限："/>
        <EditText
            android:id="@+id/et_hr_high_limit"
            style="@style/edittext_circle_gray_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:hint="请输入数字"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_ecgmonitor_config_cancel"
            style="@style/button_circle_blue_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="取消"/>
        <Button
            android:id="@+id/btn_ecgmonitor_config_default"
            style="@style/button_circle_blue_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="恢复默认"/>
        <Button
            android:id="@+id/btn_ecgmonitor_config_ok"
            style="@style/button_circle_blue_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="确定"/>

    </LinearLayout>
</LinearLayout>