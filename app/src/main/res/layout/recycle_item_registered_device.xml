<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="65dp">

    <ImageView
        android:id="@+id/iv_registerdevice_image"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:src="@mipmap/ic_unknown_device"
        android:contentDescription="登记的设备图片"/>



    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_marginEnd="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_registerdevice_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="@color/primary_text"
            android:textSize="20sp"
            android:text="未知设备名"/>

        <TextView
            android:id="@+id/tv_registerdevice_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="设备Mac地址"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_registerdevice_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="关闭"
            android:textSize="12sp"/>

    </LinearLayout>









</LinearLayout>