<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ecgappendix_creator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="匿名"
            android:textAppearance="@style/PersonTextAppearance"
            android:textSize="14sp"
            android:layout_margin="2dp"
            android:maxLength="10"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/ecgappendix_creator"
            android:text="的留言"
            android:textSize="14sp"/>

        <LinearLayout
            android:id="@+id/ecgappendix_reviseat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改于："
                android:textColor="@color/secondary_text"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/ecgappendix_modifytime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/EcgCommentTextAppearance"
                android:text="未知"
                android:textSize="12sp"
                android:textColor="#000"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/ib_ecgappendix_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_save_color_32px"
            android:contentDescription="save appendix"
            android:layout_toStartOf="@id/ecgappendix_reviseat"
            android:background="@color/primary"
            android:visibility="visible"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <EditText
            android:id="@+id/ecgappendix_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:textAppearance="@style/EcgCommentTextAppearance"
            android:textSize="16sp"
            android:hint="请输入您的留言。"
            android:minLines="2"
            android:focusableInTouchMode="false"/>

    </LinearLayout>

</LinearLayout>