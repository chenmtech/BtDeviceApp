<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:toolbar="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cmtech.android.bledeviceapp.activity.MainActivity">

    <!-- 这是主界面 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#fff"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            toolbar:navigationIcon="@mipmap/ic_menu" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--  欢迎界面  -->
            <include layout = "@layout/welcome_layout"/>

            <!--  设备界面  -->
            <LinearLayout
                android:id="@+id/main_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="invisible">

                <FrameLayout
                    android:id="@+id/main_fragment_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                </FrameLayout>

                <android.support.design.widget.TabLayout
                    android:id="@+id/main_tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabGravity="fill"
                    app:tabIndicatorColor="#f00"
                    app:tabMode="fixed"
                    app:tabPadding="0dp"
                    app:tabSelectedTextColor = "#f00"
                    app:tabTextColor = "#00f"
                    app:tabTextAppearance="@style/MainTabLayoutTextAppearance"
                    android:background="@color/primary_light"/>

            </LinearLayout>
        </FrameLayout>

    </LinearLayout>


    <!--这是NavigationView-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#fff"
        android:orientation="vertical">


        <android.support.design.widget.NavigationView
            android:id="@+id/nav_view"
            app:theme ="@style/navigationDrawerStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:headerLayout="@layout/navigation_header"
            app:menu="@menu/navigation_menu">
        </android.support.design.widget.NavigationView>


        <include layout="@layout/activity_registered_device"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="2dp"/>
    </LinearLayout>


</android.support.v4.widget.DrawerLayout>
