<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:cmtech="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.cmtech.android.bledevice.ecgmonitor.EcgFileReelWaveView
        android:id="@+id/ecg_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        cmtech:background_color="#666"
        cmtech:grid_color="#f00"
        cmtech:wave_color="#ff0"
        cmtech:show_gridline="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btn_ecg_startandstop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:src="@mipmap/ic_ecg_play_48px"
            android:text="开始"
            android:minHeight="0dp"/>

        <TextView
            android:id="@+id/tv_ecgreplay_currenttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="top"
            android:text="00:00:00"
            android:textColor="#f00"/>

        <TextView
            android:id="@+id/tv_ecgreplay_totaltime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="top"
            android:text="00:00:00"
            android:textColor="#f00"/>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id = "@+id/rv_ecgfile_report"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_replay_comment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:inputType="textMultiLine"
            android:maxLength="50"
            android:minLines="2"
            android:hint="请输入"/>

        <Button
            android:id="@+id/btn_ecgreplay_addcomment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:minHeight="0dp"
            android:text="添加"/>
    </LinearLayout>
</LinearLayout>