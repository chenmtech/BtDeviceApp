<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cmtech="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--记录简介部分-->
    <include layout="@layout/layout_ecg_record_introduction"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--心电信号部分-->
            <LinearLayout
                android:id="@+id/layout_signal_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/primary_dark"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="心电信号"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp">

                    <com.cmtech.android.bledevice.ecgmonitor.view.RollEcgRecordWaveView
                        android:id="@+id/rwv_signal_view"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        cmtech:background_color="#666"
                        cmtech:grid_color="#f00"
                        cmtech:wave_color="#ff0"
                        cmtech:show_gridline="true"/>

                    <TextView
                        android:id="@+id/tv_current_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:text="00:00:00"
                        android:textColor="#fff"
                        android:textSize="16sp"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp">

                    <ImageButton
                        android:id="@+id/ib_replay_control"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/primary_dark"
                        android:layout_marginStart="5dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@mipmap/ic_play_32px"
                        android:minHeight="0dp"
                        android:visibility="gone"
                        android:contentDescription="@null"/>

                    <SeekBar
                        android:id="@+id/sb_replay"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/tv_total_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="6dp"
                        android:text="00:00:00"
                        android:textColor="@color/primary_text"
                        android:textSize="12sp"/>
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id = "@+id/rv_comment_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    android:layout_margin="8sp"/>
            </LinearLayout>

            <!--心率部分-->
            <LinearLayout
                android:id="@+id/layout_hr_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/primary_dark"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="心率分析"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>

                <include layout="@layout/layout_hr_common_info"/>

                <include layout="@layout/layout_hr_line_chart"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="6dp"
                    android:background="@color/primary_dark"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="6dp"
                    android:text="统计分布"
                    android:textSize="12sp"
                    android:textColor="@color/primary_text"/>

                <include layout="@layout/layout_hr_hist_chart"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"/>
            </LinearLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>