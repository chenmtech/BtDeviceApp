<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cmtech= "http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context = "com.cmtech.android.btdevice.ecgmonitor.EcgMonitorFragment">

    <com.cmtech.android.btdeviceapp.activity.DeviceFragTitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.cmtech.android.btdeviceapp.activity.DeviceFragTitleLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="30dp"
            android:text="ECG数据："/>

        <TextView
            android:id="@+id/tv_ecg_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <com.cmtech.android.btdevice.ecgmonitor.EcgWaveView
        android:id="@+id/ecg_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        cmtech:background_color="#fff"
        cmtech:grid_color="#f00"
        cmtech:ecg_color="#000"/>

</LinearLayout>