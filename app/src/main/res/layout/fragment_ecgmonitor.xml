<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cmtech= "http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context = "com.cmtech.android.bledevice.ecgmonitor.activity.EcgMonitorFragment">

    <!--采样率，导联和标定值显示，暂时不要-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="采样率："/>

        <TextView
            android:id="@+id/tv_ecg_samplerate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未知"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:text="Hz"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="导联："/>

        <TextView
            android:id="@+id/tv_ecg_leadtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="未知"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="定标值："/>

        <TextView
            android:id="@+id/tv_ecg_1mv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="未知"/>
    </LinearLayout>

    <!--ecgView及叠加-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <com.cmtech.android.bledevice.view.ScanWaveView
            android:id="@+id/rwv_ecgview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            cmtech:background_color="#666"
            cmtech:grid_color="#f00"
            cmtech:wave_color="#ff0"
            cmtech:show_gridline="true"/>

        <TextView
            android:id="@+id/tv_ecg_hr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="2dp"
            android:drawableStart="@mipmap/ic_heart_48px"
            android:text=""
            android:textSize="40sp"
            android:textColor="@color/primary"/>

        <TextView
            android:id="@+id/tv_ecg_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="2dp"
            android:text=""
            android:textSize="20sp"
            android:textColor="@color/primary"
            android:visibility="gone"/>
    </FrameLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_ecg_controller"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:tabGravity="center"
        app:tabIndicatorColor="@color/accent"
        app:tabIndicatorHeight="1dp"
        app:tabMode="scrollable"
        app:tabPadding="0dp"
        app:tabSelectedTextColor="@color/accent"
        app:tabTextColor="@color/primary_text"
        app:tabTextAppearance="@style/ControllerTabLayoutTextAppearance"
        android:background="@color/primary"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/primary_dark"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_ecg_controller"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>