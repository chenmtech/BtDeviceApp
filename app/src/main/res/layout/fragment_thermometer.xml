<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary"
    tools:context = "com.cmtech.android.bledevice.thermo.activity.ThermoFragment">


    <RelativeLayout
        android:id="@+id/layout_highesttemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/tv_thermo_highesttempvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="100sp"
            android:textColor="#ff0000"
            android:text="00.00"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_thermo_highesttempvalue"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_temperature_unit"
            android:contentDescription="temp unit"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/layout_highesttemp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_thermotemp"
        android:contentDescription="highest temp"/>


    <TextView
        android:id="@+id/tv_thermo_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_highesttemp"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:textSize="30sp"
        android:textColor="@color/accent"
        android:text="正常"/>

    <ImageButton
        android:id="@+id/ib_thermo_resethighesttemp"
        android:layout_width="49dp"
        android:layout_height="44dp"
        android:layout_below="@id/layout_highesttemp"
        android:layout_toEndOf="@id/tv_thermo_status"
        android:background="@color/secondary"
        android:src="@mipmap/ic_ecgexplorer_update"
        android:contentDescription="update highest temp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_thermo_status"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/iv_realtimetemp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_realtimetemp"
            android:contentDescription="realtime temp"/>

        <TextView
            android:id="@+id/tv_thermo_currenttempvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_realtimetemp"
            android:text="00.00"
            android:textColor="@color/secondary_text"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_thermo_currenttempvalue"
            android:layout_toEndOf="@id/tv_thermo_currenttempvalue"
            android:text="℃"
            android:textColor="@color/secondary_text"
            android:textSize="30sp" />

    </RelativeLayout>



</RelativeLayout>