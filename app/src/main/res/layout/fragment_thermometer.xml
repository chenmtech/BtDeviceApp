<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accent"
    tools:context = "com.cmtech.android.bledevice.thermo.controller.ThermoFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal|bottom"
        android:textSize="30sp"
        android:textColor="#ff0000"
        android:text="最高温度"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        <TextView
            android:id="@+id/tv_thermo_highesttempvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="100sp"
            android:textColor="#ff0000"
            android:text="00.00"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_thermo_highesttempvalue"
            android:layout_alignTop="@+id/tv_thermo_highesttempvalue"
            android:textSize="30sp"
            android:textColor="#ff0000"
            android:text="℃"/>

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_thermo_status"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:textColor="#ff0000"
        android:text="正常"/>

    <Button
        android:id="@+id/btn_thermo_resethighesttemp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:text="重置" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="当前温度"
            android:textColor="#ff0000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_thermo_currenttempvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="00.00"
            android:textColor="#ff0000"
            android:textSize="50sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_thermo_currenttempvalue"
            android:layout_alignTop="@+id/tv_thermo_currenttempvalue"
            android:textSize="30sp"
            android:textColor="#ff0000"
            android:text="℃"/>

    </RelativeLayout>



</LinearLayout>