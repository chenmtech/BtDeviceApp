<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Main Toolbar上Title的文本风格 -->
    <style name="MainToolbarTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/big_font</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <!-- Main Toolbar上Title的文本风格 -->
    <style name="MainToolbarSubTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/smallest_font</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <!-- Main Tablayout的文本风格 -->
    <style name="MainTabLayoutTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/normal_font</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Controller Tablayout的文本风格 -->
    <style name="ControllerTabLayoutTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/smallest_font</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Ecg Comment的文本风格 -->
    <style name="EcgCommentTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/normal_font</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <!-- Ecg Comment的文本风格 -->
    <style name="PersonTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/big_font</item>
        <item name="android:textColor">@color/accent</item>
    </style>


    <!-- 侧边栏中菜单的文本风格 -->
    <style name="navigationDrawerStyle">
        <item name="android:textSize">@dimen/normal_font</item>
        <item name="android:actionMenuTextColor">@color/primary_dark</item>
    </style>

    <style name="button_circle_blue_style">
        <item name="android:background">@drawable/button_circle_blue_background</item>
        <item name="android:layout_margin">10dp</item>
        <item name="minWidth">0dp</item>
        <item name="minHeight">0dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="edittext_circle_gray_style" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edittext_circle_gray_background</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="edittext_circle_gray_no_focusable_style" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edittext_circle_gray_background</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">monospace</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
