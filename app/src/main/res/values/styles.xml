<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <!-- Main Toolbar上Title的文本风格 -->
    <style name="MainToolbarTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">24sp</item>
    </style>

    <!-- MainTablayout的文本风格 -->
    <style name="MainTabLayoutTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="navigationDrawerStyle" >
        <item name="android:textSize">16sp</item>
        <item name="android:actionMenuTextColor">@color/primary_dark</item>
    </style>

    <style name="minWidth0DpButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">0dp</item>
    </style>

</resources>
